@model MonitoringViewModel

<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" type="text" id="name" placeholder="Web Site Name" asp-for="Name" required>
    </div>
    <div class="form-group">
        <label asp-for="Url">Url</label>
        <input class="form-control" type="url" id="name" placeholder="http://google.com" asp-for="Url" required>
    </div>
    <div class="form-group">
        <label asp-for="Interval">Monitoring Interval(Minute)</label>
        <input class="form-control" type="number" min="1" max="1440" id="name" placeholder="Monitoring Interval" asp-for="Interval" required>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>